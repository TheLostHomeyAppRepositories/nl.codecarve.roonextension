{
  "id": "nl.codecarve.roonextension",
  "version": "1.0.8",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Roon"
  },
  "description": {
    "en": "Rediscover your music across every room"
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.jpg",
    "large": "/assets/images/large.jpg",
    "xlarge": "/assets/images/xlarge.jpg"
  },
  "author": {
    "name": "CodeCarve",
    "email": "help@codecarve.nl"
  },
  "contributors": {
    "developers": [
      {
        "name": "CodeCarve"
      }
    ]
  },
  "brandColor": "#6D6CD4",
  "drivers": [
    {
      "id": "roon-zone",
      "name": {
        "en": "Roon Zone Device"
      },
      "class": "speaker",
      "capabilities": [
        "speaker_auto_radio"
      ]
    },
    {
      "id": "roon-output",
      "name": {
        "en": "Roon Output Device"
      },
      "class": "speaker",
      "capabilities": [
        "convenience_switch",
        "speaker_auto_radio"
      ],
      "capabilitiesOptions": {
        "convenience_switch": {
          "title": {
            "en": "Convenience Switch",
            "nl": "Convenience Switch"
          },
          "type": "boolean",
          "set": true,
          "get": false
        }
      },
      "flow": {
        "actions": [
          {
            "id": "convenience_switch",
            "title": {
              "en": "Wake-up Output",
              "nl": "Wake-up Output"
            },
            "hint": {
              "en": "The output that should be woken up.",
              "nl": "The output that should be woken up."
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "filter": "driver_id=roon-output"
              }
            ]
          }
        ]
      }
    }
  ],
  "source": "https://github.com/codecarve/roonextension",
  "bugs": {
    "url": "https://github.com/codecarve/roonextension/issues"
  },
  "support": "mailto:hello@codecarve.nl",
  "contributing": {
    "donate": {
      "paypal": {
        "username": "codecarve"
      }
    }
  },
  "homeyCommunityTopicId": 119818
}
